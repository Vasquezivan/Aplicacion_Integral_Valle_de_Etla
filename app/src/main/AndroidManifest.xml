<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plataforma_Extraescolares.NoActionBar">

        <!-- ACTIVIDAD PRINCIPAL (pantalla de login) SIN ActionBar -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Plataforma_Extraescolares.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ACTIVIDADES QUE NO NECESITAN ActionBar -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Plataforma_Extraescolares.NoActionBar" />

        <activity
            android:name=".CoordinadorActivity"
            android:exported="false"
            android:label="@string/title_activity_coordinador"
            android:theme="@style/Theme.Plataforma_Extraescolares.NoActionBar" />
        

        <activity
            android:name=".ui.Administrador.Actividades_Valle_de_Etla"
            android:exported="false" />

        <activity
            android:name=".ui.Administrador.Actividades_Santa_Maria_Tlahuitoltepec"
            android:exported="false" />

        <activity
            android:name=".ui.Administrador.Actividades_Demetrio_Vallejo"
            android:exported="false" />

        <activity
            android:name=".ui.Administrador.Actividades_Union_Hidalgo"
            android:exported="false" />

        <activity
            android:name=".Gestion_Semestres_Admin"
            android:exported="false" />

    </application>

</manifest>
