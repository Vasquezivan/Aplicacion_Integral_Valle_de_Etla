<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Encabezado con logos y tabla -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp">

            <!-- LOGO SGC (izquierda) -->
            <ImageView
                android:id="@+id/logoSGC"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:src="@drawable/logo_itve"
                android:scaleType="fitCenter"
                android:contentDescription="Logo SGC" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <!-- Marco superior estilo "tabla" -->
            <LinearLayout
                android:id="@+id/headerBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/header_border"
                android:padding="6dp">

                <!-- Fila 1: Título + código -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHeaderTitle"
                        android:layout_width="0dp"
                        android:layout_weight="2.2"
                        android:layout_height="wrap_content"
                        android:text="Constancia de cumplimiento de actividad Cultural y/o Deportiva"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCodigo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Código:TecNM-VI-PO-003-05"
                        android:textSize="12sp"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Fila 2: Referencia y revisión -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:id="@+id/tvReferencia"
                        android:layout_width="0dp"
                        android:layout_weight="2.2"
                        android:layout_height="wrap_content"
                        android:text="Referencia a la Norma ISO 9001:2015   8.1"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRevision"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Revisión: 0"
                            android:gravity="end"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvPagina"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Página 1 de 1"
                            android:gravity="end"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <!-- LOGO TecNM (derecha) -->
            <ImageView
                android:id="@+id/logoTecNM"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:src="@drawable/sep_logo"
                android:scaleType="fitCenter"
                android:contentDescription="Logo TecNM" />
        </LinearLayout>

        <!-- Espacio -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Título centrado -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONSTANCIA DE CUMPLIMIENTO DE ACTIVIDAD CULTURAL Y/O DEPORTIVA"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <!-- Contenido general -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/tvDestinatario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C. __________________"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvJefe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JEFE(A) DEL DEPARTAMENTO DE SERVICIOS ESCOLARES\nPRESENTE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="18dp"
                android:lineSpacingExtra="4dp"
                android:text="El que suscribe ____________________________, por este medio se permite hacer de su conocimiento que el (la) estudiante ____________________________, con número de control __________ de la carrera de ____________________________, ha cumplido su actividad Cultural y/o Deportiva con el nivel de desempeño ________________ y un valor numérico de ______ durante el periodo escolar _________________ con un valor curricular de ______ créditos.\n\nSe extiende la presente en la ______________, a los ___ días del mes de ____________ de 20__." />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tvAtentamente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ATENTAMENTE"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Firma / sello -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <!-- Sello -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <View
                        android:layout_width="140dp"
                        android:layout_height="110dp"
                        android:background="@drawable/box_border" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELLO"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="wrap_content" />

                <!-- Vo. Bo. -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tvVoBo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vo. Bo."
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvNombreFirma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="28dp" />
    </LinearLayout>
</ScrollView>
