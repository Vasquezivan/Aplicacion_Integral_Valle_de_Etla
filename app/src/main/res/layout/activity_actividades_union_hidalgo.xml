<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Administrador.Actividades_Union_Hidalgo">

    <!-- ENCABEZADO FIJO -->
    <ImageView
        android:id="@+id/imgEncabezado"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/encabezado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BARRA DE TÍTULO -->
    <FrameLayout
        android:id="@+id/contenedorTitulo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="-30dp"
        android:background="#000080"
        app:layout_constraintTop_toBottomOf="@+id/imgEncabezado">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtTituloPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividades Extraescolares"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/txtSubtitulo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />
            <TextView
                android:id="@+id/txtSubtitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CIDERS Unión Hidalgo "
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/txtTituloPrincipal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- LOGOS -->
    <ImageView
        android:id="@+id/imgSepLogo"
        android:layout_width="153dp"
        android:layout_height="88dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/sep_logo"
        app:layout_constraintBottom_toTopOf="@id/contenedorTitulo"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageView
        android:id="@+id/imgLogoItve"
        android:layout_width="151dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_itve"
        app:layout_constraintBottom_toTopOf="@id/contenedorTitulo"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        android:id="@+id/imgTecnmLogo"
        android:layout_width="59dp"
        android:layout_height="38dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/tecnm_logo"
        app:layout_constraintBottom_toTopOf="@id/contenedorTitulo"
        app:layout_constraintEnd_toStartOf="@id/imgLogoItve"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@id/imgSepLogo" />

    <!-- TÍTULO DE LA ACTIVIDAD (DINÁMICO) -->
    <TextView
        android:id="@+id/tituloActividad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        tools:text="Basquetbol"
        android:textColor="#000080"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contenedorTitulo" />

    <!-- LÍNEA DIVISORIA NARANJA -->
    <View
        android:id="@+id/lineaNaranja"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:background="#FFA500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloActividad" />

    <!-- SUBTÍTULO O DESCRIPCIÓN DE LA ACTIVIDAD (DINÁMICO) -->
    <TextView
        android:id="@+id/subtituloActividad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        tools:text="Únete a un equipo dinámico, desarrolla habilidades como dribleo, tiro y defensa. Se compite contra otros campus del TecNM."
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineaNaranja" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEstudiante"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/subtituloActividad"
        app:layout_constraintBottom_toTopOf="@+id/contenedorPie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/card_background_sombra">

            <!-- ===== CABECERA DE LA TABLA (LinearLayout) ===== -->
            <LinearLayout
                android:id="@+id/barraAzul"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/barra_azul_redondeada"
                android:gravity="center_vertical">

                <View
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1" />

                <TextView
                    android:id="@+id/headerNombre"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:gravity="center_vertical|start"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Nombre"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/headerNoControl"
                    android:layout_width="82dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="No. Control"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/headerCarrera"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="Carrera"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/headerSemestre"
                    android:layout_width="79dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="Semestre"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewEstudiantes"
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/botonEditar"
                    android:layout_width="110dp"
                    android:layout_height="38dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#FFA500"
                    android:text="Editar"
                    android:textAllCaps="false"
                    android:textSize="10sp"
                    app:icon="@drawable/edit"
                    app:iconGravity="textStart"
                    app:iconSize="20dp"
                    app:iconTint="@android:color/black"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/contenedorPie"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000080"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="© 2025 Instituto Tecnológico del Valle de Etla. Todos los derechos reservados."
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
