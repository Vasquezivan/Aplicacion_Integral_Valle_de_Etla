                                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                            <Button android:id="@+id/btnEditar4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Editar" android:backgroundTint="#4CAF50" android:textColor="@android:color/white" android:layout_margin="4dp"/>
