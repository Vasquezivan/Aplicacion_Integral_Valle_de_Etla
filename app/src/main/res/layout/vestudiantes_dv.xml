                                            <Button android:id="@+id/btnEditar6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Editar" android:backgroundTint="#4CAF50" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                            <Button android:id="@+id/btnEliminar6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eliminar" android:backgroundTint="#F44336" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                        </LinearLayout>
                                    </TableRow>

                                    <TableRow android:background="#F8F8F8">
                                        <TextView android:text="Mariana Cruz" android:padding="12dp"/>
                                        <TextView android:text="2348102" android:padding="12dp"/>
                                        <TextView android:text="IEM" android:padding="12dp"/>
                                        <TextView android:text="3°" android:padding="12dp"/>
                                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                            <Button android:id="@+id/btnEditar7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Editar" android:backgroundTint="#4CAF50" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                            <Button android:id="@+id/btnEliminar7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eliminar" android:backgroundTint="#F44336" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                        </LinearLayout>
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">
                                        <TextView android:text="Luis Pérez" android:padding="12dp"/>
                                        <TextView android:text="2348120" android:padding="12dp"/>
                                        <TextView android:text="IIA" android:padding="12dp"/>
                                        <TextView android:text="9°" android:padding="12dp"/>
                                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                            <Button android:id="@+id/btnEditar8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Editar" android:backgroundTint="#4CAF50" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                            <Button android:id="@+id/btnEliminar8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eliminar" android:backgroundTint="#F44336" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                        </LinearLayout>
                                    </TableRow>

                                    <TableRow android:background="#F8F8F8">
                                        <TextView android:text="Fernanda Jiménez" android:padding="12dp"/>
                                        <TextView android:text="2348150" android:padding="12dp"/>
                                        <TextView android:text="IER" android:padding="12dp"/>
                                        <TextView android:text="1°" android:padding="12dp"/>
                                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                            <Button android:id="@+id/btnEditar9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Editar" android:backgroundTint="#4CAF50" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                            <Button android:id="@+id/btnEliminar9" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eliminar" android:backgroundTint="#F44336" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                        </LinearLayout>
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">
                                        <TextView android:text="Ricardo Mendoza" android:padding="12dp"/>
                                        <TextView android:text="2348188" android:padding="12dp"/>
                                        <TextView android:text="ISC" android:padding="12dp"/>
                                        <TextView android:text="10°" android:padding="12dp"/>
                                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                            <Button android:id="@+id/btnEditar10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Editar" android:backgroundTint="#4CAF50" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                            <Button android:id="@+id/btnEliminar10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eliminar" android:backgroundTint="#F44336" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                        </LinearLayout>
                                    </TableRow>

                                </TableLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </ScrollView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- PIE AZUL FIJO -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contenedorPie"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000080"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#169; 2025 Instituto Tecnológico del Valle de Etla. Todos los derechos reservados."
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>