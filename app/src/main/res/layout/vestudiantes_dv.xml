                                        <TextView android:text="ISC" android:padding="12dp" android:minWidth="100dp"/>
                                        <TextView android:text="6°" android:padding="12dp" android:minWidth="80dp"/>
                                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                                            <Button android:id="@+id/btnEditar1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Editar" android:backgroundTint="#4CAF50" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                            <Button android:id="@+id/btnEliminar1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eliminar" android:backgroundTint="#F44336" android:textColor="@android:color/white" android:layout_margin="4dp"/>
                                        </LinearLayout>
                                    </TableRow>

                                    <TableRow android:background="@android:color/white">
