<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ENCABEZADO CON LOGOS -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/encabezado">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/sep_logo"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/tecnm_logo"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/logo_itve"
                android:adjustViewBounds="true" />

        </RelativeLayout>

        <!-- BARRA AZUL - TITULO CENTRO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#061B82"
            android:text="Centro de Investigación y Desarrollo de Energías Renovables en Santa Maria Tlahuitepec"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- TITULO ACTIVIDAD -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atletismo"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#061B82"
            android:gravity="center"
            android:layout_marginTop="15dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="#0033CC"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

        <!-- DESCRIPCION -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Participa en sesiones de resistencia, velocidad y técnica de salto. Ideal para quienes disfrutan del reto individual y las competencias."
            android:padding="20dp"
            android:textColor="#444444"
            android:textSize="14sp"
            android:gravity="center" />

        <!-- BARRA DE SECCIÓN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Estudiantes Registrados"
                android:textStyle="bold"
                android:textColor="#061B82"
                android:textSize="14sp"
                android:paddingStart="15dp" />

        </LinearLayout>

        <!-- BUSCADOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etBuscar"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:hint="Buscar Estudiante"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background"
                android:drawableStart="@android:drawable/ic_menu_search" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:layout_marginStart="10dp"
                android:tint="#061B82" />
        </LinearLayout>

        <!-- ENCABEZADO TABLA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#061B82"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp">

            <!-- Checkbox Header -->
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="✓"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <!-- Nombre -->
            <TextView
                android:text="Nombre del Estudiante"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp" />

            <!-- No Control -->
            <TextView
                android:text="No Control"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <!-- Carrera -->
            <TextView
                android:text="Carrera"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <!-- Semestre -->
            <TextView
                android:text="Semestre"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <!-- Acción -->
            <TextView
                android:text="Acción"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- ESTUDIANTE 1: Laura Gonzalez -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_marginBottom="1dp"
            android:elevation="1dp">

            <!-- Checkbox -->
            <CheckBox
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <!-- Nombre -->
            <TextView
                android:text="Laura Gonzalez"
                android:textSize="14sp"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="#333333" />

            <!-- No Control -->
            <TextView
                android:text="2347842"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <!-- Carrera -->
            <TextView
                android:text="1ºC"
                android:textSize="14sp"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <!-- Semestre -->
            <TextView
                android:text="Sexto"
                android:textSize="14sp"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <!-- BOTONES DE ACCIÓN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="2dp">

                <!-- Botón Evaluar -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Evaluar"
                    android:textSize="12sp"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginEnd="3dp" />

                <!-- Botón Editar -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Editar"
                    android:textSize="12sp"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginHorizontal="3dp" />

                <!-- Botón Eliminar -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Eliminar"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="3dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ESTUDIANTE 2: Alan Gonzales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_marginBottom="1dp"
            android:elevation="1dp">

            <CheckBox
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:text="Alan Gonzales"
                android:textSize="14sp"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="#333333" />

            <TextView
                android:text="2236758"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <TextView
                android:text="IDC"
                android:textSize="14sp"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <TextView
                android:text="segundo"
                android:textSize="14sp"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="2dp">

                <!-- Este ya está Evaluado -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Evaluado"
                    android:textSize="12sp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginEnd="3dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Editar"
                    android:textSize="12sp"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginHorizontal="3dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Eliminar"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="3dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- ESTUDIANTE 3: Dafne Allen -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@android:color/white"
            android:layout_marginBottom="1dp"
            android:elevation="1dp">

            <CheckBox
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:text="Dafne Allen"
                android:textSize="14sp"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:textColor="#333333" />

            <TextView
                android:text="5427565"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <TextView
                android:text="LGA S"
                android:textSize="14sp"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <TextView
                android:text="Primero"
                android:textSize="14sp"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="2dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Evaluar"
                    android:textSize="12sp"
                    android:backgroundTint="#2196F3"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginEnd="3dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Editar"
                    android:textSize="12sp"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginHorizontal="3dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Eliminar"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:layout_marginStart="3dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- BOTONES DE ACCIÓN GLOBALES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Seleccionar Todos"
                android:textSize="14sp"
                android:backgroundTint="#061B82"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginEnd="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Generar Reporte"
                android:textSize="14sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginHorizontal="5dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Agregar Estudiante"
                android:textSize="14sp"
                android:backgroundTint="#9C27B0"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginStart="5dp" />
        </LinearLayout>

        <!-- PIE DE PÁGINA -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="© 2025 Instituto Tecnológico del Valle de Etla. Todos los derechos reservados."
            android:textColor="@android:color/white"
            android:background="#061B82"
            android:textSize="11sp"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>